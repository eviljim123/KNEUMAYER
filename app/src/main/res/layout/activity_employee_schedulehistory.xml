<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EmployeeSchedulehistoryActivity">


<TextView
    android:id="@+id/tvHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Employee Schedule History"
    android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>

    <DatePicker
    android:id="@+id/dpDateFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvHeader"
    android:layout_marginTop="10dp" />

    <Button
    android:id="@+id/btnFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Filter"
    android:layout_below="@id/dpDateFilter"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="10dp"/>

    <ListView
    android:id="@+id/lvEmployeeSchedules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/btnFilter"
    android:layout_marginTop="10dp" />

    </RelativeLayout>